import { PrismaClient } from '@prisma/client';

const prisma = new PrismaClient();

async function main() {
    const giocatori = await prisma.giocatore.count();
    const movimenti = await prisma.movimentoContabile.count();
    const saldi = await prisma.saldoBorsellino.findMany();

    console.log('--- STATISTICHE DATABASE ---');
    console.log(`Numero Giocatori: ${giocatori}`);
    console.log(`Numero Movimenti: ${movimenti}`);
    console.log(`Numero Record Saldi: ${saldi.length}`);

    if (giocatori > 0) {
        const tuttiIGiocatori = await prisma.giocatore.findMany({
            select: { nome: true, cognome: true, id: true }
        });
        console.log('Elenco Giocatori:', tuttiIGiocatori);
    }
}

main()
    .catch((e) => {
        console.error(e);
        process.exit(1);
    })
    .finally(async () => {
        await prisma.$disconnect();
    });
