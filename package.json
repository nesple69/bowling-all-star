{
  "name": "bowling-management-app",
  "version": "1.0.0",
  "description": "Bowling Association Management Web App",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "build": "npm run prisma:generate --workspace=server && npm run build --workspace=client && rm -rf public && mkdir -p public && cp -rv client/dist/* public/",
    "install-all": "npm install"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}